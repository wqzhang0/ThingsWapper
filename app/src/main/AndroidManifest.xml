<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wqzhang.thingswapper">

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activitys.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activitys.MainActivity"
            android:clearTaskOnLaunch="true"
            android:label="@string/app_name">
            <!--<intent-filter>-->
            <!--<action android:name="android.intent.action.MAIN" />-->

            <!--<category android:name="android.intent.category.LAUNCHER" />-->
            <!--</intent-filter>-->

            <intent-filter>
                <action android:name="com.wqzhang.thingswapper.activity.MainActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>

        <!--android:windowSoftInputMode="stateAlwaysHidden|adjustResize"-->

        <activity android:name=".activitys.AddToDoThingActivity">
            <intent-filter>
                <action android:name="com.wqzhang.thingswapper.activity.AddToDoThingActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <service android:name=".services.NotifyService">
            <intent-filter>
                <action android:name="com.wqzhang.thingswapper.services.NotifyService" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </service>
        <receiver android:name=".Receivers.NotifyReceiver">

            <intent-filter>
                <action android:name="com.wqzhang.thingswapper.Receivers.NotifyReceiver" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>
    </application>

</manifest>